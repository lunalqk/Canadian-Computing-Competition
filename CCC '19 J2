import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner read = new Scanner(System.in);

        int L = read.nextInt();

        for(int i = 0; i < L; i++){
            int a = read.nextInt();
            String b = read.next();
            for (int j = 0; j < a; j++){
                System.out.print(b);
            }
            System.out.println();
        }
    }
}
